!!!
html(ng-app="App")
	head
		meta(charset="utf-8")
		base(href="/")
		title My first application
		link(rel="stylesheet", href="/css/style.min.css", type="text/css")
	body
		nav(role="navigation").navbar.navbar-default
			div.container-fluid
				div.navbar-header
					button(type="button").navbar-toggle
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a(href="#").navbar-brand My first project
				div.collapse.navbar-collapse
					ul.nav.navbar-nav
						li: a(href="/") Home							
						li(if-guest): a(href="/about-us") About us
						li(if-authenticated): a(href="/posts") Posts
					ul(ng-controller="ProfileCtrl").nav.navbar-nav.navbar-right
						li(if-guest): a(href="/register") Register
						li(if-guest): a(href="/authentication") Authentication
						li(if-authenticated).dropdown
							a(href="").dropdown-toggle
								img(src="http://placehold.it/24x24").img-circle
								&nbsp;{{ user.name }}
								span.caret
							ul(role="menu").dropdown-menu
								li: a(href="/profile") Perfil
								li.divider
								li: a(href="/auth/destroy") Sair
		div
			block content
		script(type="text/javascript", src="http://localhost:35729/livereload.js")
		script(type="text/javascript", src="/socket.io/socket.io.js")
		script(type="text/javascript", src="/js/vendor/angular/angular.min.js")
		script(type="text/javascript", src="/js/vendor/angular-resource/angular-resource.min.js")
		script(type="text/javascript", src="/js/vendor/angular-route/angular-route.min.js")
		script(type="text/javascript", src="/js/vendor/angular-sanitize/angular-sanitize.min.js")
		script(type="text/javascript", src="/js/vendor/angular-cookies/angular-cookies.min.js")
		script(type="text/javascript", src="/js/vendor/angular-strap/dist/angular-strap.min.js")
		script(type="text/javascript", src="/js/vendor/angular-strap/dist/angular-strap.tpl.min.js")
		script(type="text/javascript", src="/js/vendor/angular-bootstrap/ui-bootstrap-tpls.min.js")
		script(type="text/javascript", src="/js/vendor/angular-animate/angular-animate.min.js")
		script(type="text/javascript", src="/js/partials.js")
		script(type="text/javascript", src="/js/base.min.js")